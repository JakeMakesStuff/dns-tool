{
  "name": "dns-tool",
  "version": "1.0.0",
  "description": "A simple browser-based tool to perform DNS lookups.",
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:clean && npm run build:svg && npm run build:template && npm run build:tools",

    "build:clean": "node ./build/cleanDist.js",
    "build:svg": "node ./build/buildSVGs.js",
    "build:template": "node ./build/fetchTemplate.js",

    "build:tool": "node ./build/buildTool.js",
    "build:tools": "npm run build:tools:dns-tool && npm run build:tools:spf-explainer",
    "build:tools:dns-tool": "npm run build:tool dns-tool",
    "build:tools:spf-explainer": "npm run build:tool spf-explainer",

    "dev:prep": "npm run build:svg && npm run build:template",

    "dev:tools:spf-explainer": "npm run dev:prep spf-explainer && parcel ./src/spf-explainer/index.html --out-dir ./dev/spf-explainer",
    "dev:tools:dns-tool": "npm run dev:prep dns-tool && parcel ./src/dns-tool/index.html --out-dir ./dev/dns-tool",

    "test": "npm run test:ts-vue && npm run test:scss",
    "test:ts-vue": "tsc && eslint ./src/**/*.ts && eslint ./src/**/*.vue",
    "test:scss": "sass-lint ./src/**/*.scss --verbose --no-exit --config .sasslintrc",
    "test:ts-vue:fix": "tsc && eslint ./src/**/*.ts --fix && eslint ./src/**/*.vue --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/do-community/dns-tool.git"
  },
  "keywords": [
    "dns"
  ],
  "author": "DigitalOcean",
  "bugs": {
    "url": "https://github.com/do-community/dns-tool/issues"
  },
  "homepage": "https://github.com/do-community/dns-tool#readme",
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "babel-polyfill": "^6.26.0",
    "bulma": "^0.7.5",
    "parcel-bundler": "1.12.3",
    "vue": "^2.6.10",
    "vue-hot-reload-api": "^2.3.3",
    "vue-tippy": "^4.0.0-beta.4"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "@vue/component-compiler-utils": "^3.0.0",
    "eslint": "^6.2.2",
    "eslint-plugin-vue": "5.2.3",
    "jsdom": "^15.1.1",
    "node-fetch": "^2.6.0",
    "posthtml": "^0.11.4",
    "posthtml-extend": "^0.3.0",
    "sass": "^1.22.9",
    "sass-lint": "^1.13.1",
    "typescript": "^3.5.3",
    "vue-template-compiler": "^2.6.10"
  }
}
